<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.zorba.bt.app"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@id/textlistmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#ffffffff"
        android:textSize="20.0sp" />

    <com.zorba.bt.app.SvgView
        android:id="@id/spinnertriangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textlistmenu"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignRight="@id/textlistmenu"
        app:svgviewsrc="@raw/spinnertriangle" />

</RelativeLayout>